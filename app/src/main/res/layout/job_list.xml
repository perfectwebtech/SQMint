<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/list_horizontal_padding"
    android:paddingRight="@dimen/list_horizontal_padding"
    android:paddingTop="@dimen/list_vertical_padding"
    android:paddingBottom="@dimen/list_vertical_padding">

    <TextView
        android:id="@+id/tv_job_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Name"
        android:textColor="@color/colorTextBlack"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_job_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_job_name"
        android:text="21332945" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Run Date :"
        android:textSize="14sp"
        android:layout_below="@+id/tv_job_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Run Time :"
        android:textSize="14sp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_last_run_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="114dp"
        android:layout_marginStart="114dp"
        android:text="20/03/2017" />

    <TextView
        android:id="@+id/tv_last_run_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16/08/2017"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/tv_last_run_date"
        android:layout_alignStart="@+id/tv_last_run_date" />

    <ImageView
        android:id="@+id/iv_job_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/list_success"
        android:layout_below="@+id/tv_job_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView5" />



</RelativeLayout>