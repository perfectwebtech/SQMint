<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:id="@+id/hardisk_card">

    <TextView
        android:id="@+id/tv_drive_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C://"
        android:textColor="@color/colorTextBlack"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_available_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.45 GB"
        android:textColor="@color/colorTextBlack"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignBaseline="@+id/tv_drive_name"
        android:layout_alignBottom="@+id/tv_drive_name"
        android:layout_toRightOf="@+id/tv_drive_name"
        android:layout_toEndOf="@+id/tv_drive_name" />

    <TextView
        android:id="@+id/tv_total_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="117 GB"
        android:textColor="@color/colorTextBlack"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="12sp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_alignBaseline="@+id/tv_total_space"
        android:layout_alignBottom="@+id/tv_total_space"
        android:layout_toRightOf="@+id/tv_total_space"
        android:layout_toEndOf="@+id/tv_total_space" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/tv_available_space"
        android:layout_alignBottom="@+id/tv_available_space"
        android:layout_toRightOf="@+id/tv_available_space"
        android:layout_toEndOf="@+id/tv_available_space"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp" />


</RelativeLayout>